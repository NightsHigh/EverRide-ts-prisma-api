generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String  @default("Unknown")
  lastName  String  @default("User")
  email     String  @unique
  password  String
  role      String  @default("User")
  isActive  Boolean @default(true)

  @@map("user")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  // one-to-many: one Category -> many Cars
  cars Car[]

  @@map("categories")
}

model Brand {
  id   Int    @id @default(autoincrement())
  name String @unique

  // one-to-many: one Brand -> many Cars
  cars Car[]

  @@map("brands")
}

model Car {
  id       Int    @id @default(autoincrement())
  model    String
  year     Int
  price    String   // you can change this to Decimal later
  fueltype String

  // foreign keys
  categoryId Int
  brandId    Int

  // relations
  category Category @relation(fields: [categoryId], references: [id])
  brand    Brand    @relation(fields: [brandId], references: [id])

  @@map("cars")
  @@index([categoryId])
  @@index([brandId])
}

